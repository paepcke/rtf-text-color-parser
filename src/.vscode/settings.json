{
    "terminal.integrated.env": {
        "ANACONDA_ENV_DIR": "/Users/paepcke/anaconda3/rtf-text-color-parser",
    },
    // General Python settings
    "python.analysis.extraPaths": [
        "./src" // Still useful if you have imports in src/main.py that import from parser/
        "." // Ensure Pylance also looks in 'src' when 'src' is the workspace root
    ],
    // Unittest specific settings
    "python.testing.unittestEnabled": true,
    "python.testing.pytestEnabled": false, // Ensure only one test framework is enabled
    "python.testing.unittestArgs": [
        "-v",
        "-s", // Specifies the start directory for test discovery
        "./parser/tests", // Path from the VS Code workspace root (which is 'src') to your tests directory
        "-p", // Specifies the pattern for test files
        "test*.py"
    ],
    // This will look for a .env file *inside* opened workspace folder, which is 'src'
    "python.envFile": "${workspaceFolder}/.env", 
    "workbench.colorTheme": "Default Dark Modern",
    "terminal.integrated.cwd": "${workspaceFolder}",
    "python.defaultInterpreterPath": "${env:VSCODE_PYTHON_PATH}",
    "debug.stepping.skipFiles": [],
    "editor.guides.indentation" : false,
    "editor.suggest.sortMethod": "underscore",
    "autoDocstring.docstringFormat" : "sphinx",
    "autoDocstring.generateDocstringOnEnter" :  true,
    "autoDocstring.quoteStyle": "'''",
    "autoDocstring.startOnNewLine" : true,
    "outline.sortOrder": "name",
    "breadcrumbs.symbolSortOrder": "name",
    "editor.minimap.enabled": false,
    "outline.showBooleans": false,
    "outline.showConstants": false,
    "outline.showEnumMembers": false,
    "outline.showEvents": false,
    "outline.showFields": false,
    "outline.showFiles": false,
    "outline.showKeys": false,
    "outline.showNamespaces": false,
    "outline.showNull": false,
    "outline.showNumbers": false,
    "outline.showObjects": false,
    "outline.showOperators": false,
    "outline.showProperties": false,
    "outline.showStrings": false,
    "outline.showStructs": false,
    "outline.showVariables": false,
    "notebook.outline.showCodeCellSymbols": false,
    "notebook.outline.showMarkdownHeadersOnly": false,
    "outline.collapseItems": "alwaysCollapse",
    "outline.problems.enabled": false,
    "outline.showArrays": false,
    "outline.problems.badges": false,
    "outline.problems.colors": false,
    "outline.showInterfaces": false,
    "outline.showTypeParameters": false
}   "notebook.outline.showCodeCellSymbols": false,
    "notebook.outline.showMarkdownHeadersOnly": false
}


